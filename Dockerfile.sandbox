# syntax=docker/dockerfile:1
FROM python:3.12-slim

# Install common data science and utility packages
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace

# Install packages for code execution
RUN pip install --no-cache-dir \
    numpy \
    pandas \
    matplotlib \
    requests \
    pytest

# Create restricted user for code execution
RUN useradd -m -u 1000 sandbox && \
    chown -R sandbox:sandbox /workspace

USER sandbox

# Disable network (enforced via docker-compose)
# Limit resources (enforced via docker-compose)
CMD ["python", "-u", "-c", "import time; time.sleep(86400)"]

